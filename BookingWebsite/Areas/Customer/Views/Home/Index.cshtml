@model List<BookingWebsite.Models.Products>
<br /> <br />
<div style="height: 100px; background-color: aliceblue" class="container">

    <div class="col-12">
        <div class="row" style="padding-top: 20px;">
            <div class="col-1">
                City
            </div>
            <div class="col-3">
                @Html.Editor("searchCity", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-2">
            </div>
            <div class="col-1">
                Price
            </div>
            <div class="col-3">
                @Html.Editor("searchPrice", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-2">
                <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                    <i class="fas fa-search">  Search</i>
                </button>
            </div>
        </div>
    </div>

</div>
<div class="row">

    @foreach (var product in Model)
    {

        <div class="col-4">
            <div class="card mb-4">

                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px; color: steelblue;">
                            @product.Name
                        </label>
                    </h4>
                </div>
                <img class="card-img-top" style="height: auto;" src="@product.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px; color: #a51313"><b>£@product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@product.Id">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



