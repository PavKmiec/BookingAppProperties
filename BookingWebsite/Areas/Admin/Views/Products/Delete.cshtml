@model BookingWebsite.Models.ViewModel.ProductsViewModel
@using BookingWebsite.Extensions


<br />

<h2 class="text-info">Delete  Property</h2>

<form method="post">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Tags"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Tags.Name" readonly class="form-control" />

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.FurnishDetail"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.FurnishDetail" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" readonly class="form-control" asp-for="Products.Available" />
                </div>
            </div>
        </div>
        <div class="col-1">


        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius: 5px; border:1px solid #bbb9b9 ">
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>

</form>

@*asp.net has already defined javascript for validation that we have added above in "asp-validation-summary" it is located in partial view
    _ValidationPartialScript and we can just use that here *@

@section Scripts
    {
    @*Including partial view*@
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

